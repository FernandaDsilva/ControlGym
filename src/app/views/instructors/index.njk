{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">

        <table width="100%">
            <a class="button" href="/instructors/create">New Instructor</a>

            <thead>
                <tr>
                    <th>Instructor</th>
                    <th>Service</th>
                    <th>Membership</th>
                    <th>Action
                    </th>
                </tr>
            </thead>

            <tbody>
                {% for instructor in instructors%}
                    <tr>
                        <td>
                            <span style="background-image: url({{instructor.avatar_url}})"></span>{{instructor.name}}
                        </td>

                        <td>
                            {% for service in instructor.services.split(",")%}

                                <div class="services">{{service}}</div>

                            {% endfor %}
                        </td>
                        
                        <td>{{instructor.total_students}}</td>

                        <td>
                            <a href="/instructors/{{instructor.id}}">
                                Details
                            </a>
                        </td>
                    </tr>

                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}