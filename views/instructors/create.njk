{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/instructors">  
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/3465564/500x500) no-repeat center center / cover "></section>
    <section class="details"> 

        <h3>New Instructors</h3>
        <div class="item">
            <div>Avatar</div>
            <input type="url" name="avatar_url" placeholder="https://">
        </div>
        <div class="item">
            <div>Instructor</div>
            <input type="text" name="name" placeholder="Name of instructors">
        </div>
        <div class="item">
            <div>Birth date</div>
            <input type="date" name="birth">
        </div>
        <div class="item">
            <div>Gender</div>
            <div>  
                <span> <input type="radio" name="gender" value="M" checked> Male</span> 
                <span> <input type="radio" name="gender" value="F"> Female</span>
            </div>
            
        </div>
         <div class="item">
            <div>Work Modality</div>
            <div>
               <input type="text" name="services" placeholder="Insert modality">
            </div>       
        </div>

        <button type="submit"> Save </button>

    </section>
</form>

{% endblock content %}

